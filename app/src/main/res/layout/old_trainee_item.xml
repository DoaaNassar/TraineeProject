<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#ffffff"
        android:elevation="5dp"
        app:cardCornerRadius="7dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="9"
                    android:orientation="vertical">


                    <duaa.traineeproject.view.FontTextViewRegular
                        android:id="@+id/nameTraineeCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="دعاء بسام نصار"
                        android:textColor="@color/Blue"
                        android:textSize="15sp"
                         />

                    <duaa.traineeproject.view.FontTextViewRegular
                        android:id="@+id/idNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="220130751"
                        android:textColor="#313030"
                        android:textSize="11sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <duaa.traineeproject.view.FontTextViewRegular
                            android:id="@+id/edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تعديل"
                            android:textColor="#184494"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"

                            />

                        <duaa.traineeproject.view.FontTextViewRegular
                            android:id="@+id/training"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التدريبات"
                            android:textColor="#184494"
                            android:textSize="12sp"
                            android:textStyle="bold"

                            />


                        <duaa.traineeproject.view.FontTextViewRegular
                            android:id="@+id/addNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="تدريب جديد"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
