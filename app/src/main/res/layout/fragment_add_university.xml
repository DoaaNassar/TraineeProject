<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <duaa.traineeproject.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تسجيل جامعة جديد "
            android:textColor="@color/silver"
            android:textSize="@dimen/text_medium"
            android:drawableEnd="@drawable/shop"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textStyle="bold" />


        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/nameUniversity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="اسم الجامعة"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_small"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <duaa.traineeproject.view.FontEditTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border"
                android:enabled="false"
                android:hint="شعار الجامعة"
                android:paddingBottom="10dp"
                android:paddingLeft="70dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/text_small"

                />

            <ImageView
                android:id="@+id/upload"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/background_buttonn"
                android:padding="8dp"
                android:src="@drawable/upload"

                />

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"

            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:visibility="gone"

                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <duaa.traineeproject.view.FontTextViewRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableEnd="@drawable/ic_place"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="العنوان"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_small"


            />


        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/email"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_small"


            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/mobileNumber"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"

            android:textSize="@dimen/text_small"

            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/phoneNumber"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/text_small"


            />

        <duaa.traineeproject.view.FontButtonRegular
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_medium"


            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
