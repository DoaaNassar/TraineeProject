<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTiop="10dp"
            android:layout_weight="9"
            android:orientation="vertical"

            >


            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/nameTraineeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="الجامعة الاسلامية"
                android:textColor="@color/Blue"
                android:textSize="15sp"


                />


            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/emailTraineeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="dbn.95@hotmail.com"
                android:textColor="@color/Blue"
                android:textSize="11sp"


                />

            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/idNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="854123697"
                android:textColor="#313030"
                android:textSize="10sp"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعديل"
                    android:textColor="#184494"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"

                />

        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>