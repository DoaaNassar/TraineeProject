<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2.5dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="7dp">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="RtlCompat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">


            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:text="4:50"
                android:textColor="@color/silver"
                android:textSize="@dimen/text_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"

                >

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="دعاء بسام نصار"
                    android:textColor="@color/Blue"
                    android:textSize="@dimen/text_medium" />

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/collage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="كلية الهندسة"
                    android:textSize="@dimen/text_small" />

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="الشفاء"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ellipse31"
                android:padding="10dp"
                android:src="@drawable/trainee"

                />

            <CheckBox
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="قبول"
                android:textColor="@color/Blue"
                android:textSize="@dimen/text_small" />

            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/disapprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="رفض"
                android:textColor="@color/red"
                android:textSize="@dimen/text_small" />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>