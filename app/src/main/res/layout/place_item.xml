<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="9"
            android:orientation="vertical"

            >


            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/nameTraineeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="الجامعة الاسلامية"
                android:textColor="@color/Blue"
                android:textSize="17sp"
                android:textStyle="bold"


                />


            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/emailTraineeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="dbn.95@hotmail.com"
                android:textColor="@color/Blue"
                android:textSize="17sp"
                android:textStyle="bold"


                />

            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/idNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="854123697"
                android:textColor="#313030"
                android:textSize="12sp"

                />

            <duaa.traineeproject.view.FontTextViewRegular
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="26/6/1995"
                android:textColor="#313030"
                android:textSize="12sp"
                android:layout_marginTop="5dp"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعديل"
                    android:textColor="#184494"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    />

                <duaa.traineeproject.view.FontTextViewRegular
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="إنتهاء"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold" />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>