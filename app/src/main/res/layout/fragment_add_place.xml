<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <duaa.traineeproject.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="تسجيل مكان جديد "
            android:textColor="@color/silver"
            android:textSize="14sp"
            android:drawableEnd="@drawable/shop"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textStyle="bold" />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/namePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="اسم المكان"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"


            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="العنوان"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"

            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/phoneNumber"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"

            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/mobileNumber"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"

            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="right"
            android:hint="@string/email"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="13sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:background="@drawable/background_edittext"
            android:orientation="vertical">

            <duaa.traineeproject.view.FontEditTextViewRegular
                android:id="@+id/textPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border"
                android:hint="اسم القسم"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:textSize="13sp"
                android:gravity="right"



                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <duaa.traineeproject.view.FontEditTextViewRegular
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border"
                    android:hint="الحد الأقصى لعدد المتدربين"
                    android:paddingBottom="10dp"
                    android:paddingLeft="75dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:inputType="number"
                    android:gravity="right"

                    />

                <ImageView
                    android:id="@+id/addPart"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_buttonn"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_add_black_24dp"

                    />

            </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <duaa.traineeproject.view.FontButtonRegular
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"


            />
    </LinearLayout>

</ScrollView>
