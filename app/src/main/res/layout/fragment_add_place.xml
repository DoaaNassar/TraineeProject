<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <duaa.traineeproject.view.FontTextViewRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="تسجيل مكان جديد "
            android:textColor="@color/silver"
            android:textSize="15sp"
            android:textStyle="bold" />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/namePlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:hint="اسم المكان"
            android:padding="10dp"
            android:textSize="13sp"
            android:gravity="right"
            android:singleLine="true"

            />

        <duaa.traineeproject.view.FontEditTextViewRegular
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:hint="@string/email"
            android:gravity="right"
            android:padding="10dp"
            android:textSize="13sp"
            android:singleLine="true"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <duaa.traineeproject.view.FontEditTextViewRegular
                android:id="@+id/textPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textSize="13sp"
                android:paddingLeft="75dp"
                android:hint="اسم القسم"
                android:singleLine="true"


                />

            <ImageView
                android:id="@+id/addPart"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@drawable/background_buttonn"

                />

        </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"
            >

        </android.support.v7.widget.RecyclerView>



        <duaa.traineeproject.view.FontButtonRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textStyle="bold"


            />
    </LinearLayout>

</ScrollView>
